<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:key="git_category"
            app:title="GitHub Configuration">

        <EditTextPreference
                app:key="repository"
                app:title="Repository URL"/>
        <EditTextPreference
                app:key="auth_method"
                app:title="Authentication method"/>
        <EditTextPreference
                app:key="password"
                app:title="Password (optional)"/>
        <EditTextPreference
                app:key="private_key"
                app:title="Private key"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="notifications_category"
            app:title="Notifications">

        <SwitchPreferenceCompat
                app:key="notifications"
                app:title="Enable notifications"
                app:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="help_category"
            app:title="Help">

        <Preference
                app:key="feedback"
                app:summary="Report technical issues or suggest new features"
                app:title="Send feedback"/>

    </PreferenceCategory>

</PreferenceScreen>
